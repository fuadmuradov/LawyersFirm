@model InfoDesc

<div class="card center-block mb-5" style="width:50rem;">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div class="card-body">
               
                <div class="form-group">
                    <label asp-for="@Model.Description" class="font-weight-600">Edit Description</label>
                    <input asp-for="@Model.Description" class="form-control" id="exampleFormControlInput1" placeholder="Slider Content">
                </div>
            </div>
            <button type="submit" class="btn btn-success ml-4">Submit</button>
        </form>
    </div>
</div>