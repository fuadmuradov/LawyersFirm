@model Slider
<div class="body-content">
    <div class="row">
    
        <div class="col-md-12 col-lg-12">
            <div class="card center-block mb-5" style="width:50rem;">
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="@Model.Title" class="font-weight-600">Slider Content</label>
                            <input asp-for="@Model.Title" class="form-control" id="exampleFormControlInput1" name="Content" placeholder="Slider Content">
                        </div>
                        <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to Update?')" >Update</button>
                    </form>
                </div>
            </div>


            <!--Table-->
            <div class="card-body">
                <div class=table-responsive>
                    <!--<table class="table table-sm table-nowrap card-table">-->
                    <label class="font-weight-600">Slider Images</label>
                    <table class="table display table-bordered table-striped table-hover bg-white m-0 card-table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Subject</th>
                                <th>Order Num</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SliderImages)
                            {
                                <tr>
                                    <td>
                                        <div class="avatar-group">
                                            <a href="user_profile.html" class="avatar avatar-xs" data-toggle="tooltip" title="Melissa Ayre">
                                                <img src="~/assets/images/home/@item.Image" class="avatar-img rounded-circle" alt="...">
                                            </a>

                                        </div>
                                    </td>
                                    <td>@item.Subject</td>
                                    <td>
                                        @item.Order
                                    </td>

                                    <td>
                                        <a href="Delete/@item.Id" class="btn btn-danger-soft btn-sm" onclick="return confirm('Are you sure you want to delete?')" ><i class="far fa-trash-alt"></i></a>
                                        <a href="Edit/@item.Id" class="btn btn-success-soft btn-sm ml-1"><i class="far fa-edit"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="SliderCreate" > <button type="button" class="btn btn-secondary"> Add New Slider Image</button></a>
                </div>
            </div>

            <!--End Table-->

        </div>
        </div>
    </div>



@section Script{ 

    <script src="assets/dist/js/pages/forms-basic.active.js"></script>
}