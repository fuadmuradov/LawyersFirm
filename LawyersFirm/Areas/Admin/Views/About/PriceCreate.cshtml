@model Price
<div class="body-content">
    <div class="row">

        <div class="col-md-12 col-lg-12">
            <div class="card center-block mb-5" style="width:50rem;">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="@Model.Amount" class="font-weight-600">Amount</label>
                            <input asp-for="@Model.Amount" class="form-control" id="exampleFormControlInput1" >
                            <span asp-validation-for="@Model.Amount"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Package" class="font-weight-600">Description</label>
                            <input asp-for="@Model.Package" class="form-control" id="exampleFormControlInput1" >
                            <span asp-validation-for="@Model.Package"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PracticeIds">Hobbies</label>
                            <select asp-for="PracticeIds" class="form-select" asp-items="@(new SelectList(ViewBag.Practice, "Id", "Name"))">
                            </select>
                            <span asp-validation-for="PracticeIds"></span>
                        </div>
                        
                        <button type="submit" class="btn btn-success">Create</button>
                    </form>
                </div>
            </div>
</div>
</div>
</div>