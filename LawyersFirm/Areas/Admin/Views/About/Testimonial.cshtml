@model List<Testimonial>
  <!--Table-->
<div class="card-body">
    <div class=table-responsive>
        <!--<table class="table table-sm table-nowrap card-table">-->
        <label class="font-weight-600">Information Descriptions</label>
        <table class="table display table-bordered table-striped table-hover bg-white m-0 card-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Fullname</th>
                    <th>Description</th>
                    <th>Compony Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <div class="avatar-group">
                            <a href="user_profile.html" class="avatar avatar-xs" data-toggle="tooltip" title="Melissa Ayre">
                                <img src="~/assets/images/testimonials/@item.Image" class="avatar-img rounded-circle" alt="...">
                            </a>

                        </div>

                    </td>
                    <td>
                        @item.Fullname
                    </td>
                    @if (item.Description.Length > 60)
                    {
                        <td>@item.Description.Substring(0, 60) ...</td>
                    }
                    else
                    {
                        <td>@item.Description</td>
                    }
                    <td>
                        @item.Componyname
                    </td>


                    <td>
                        <a href="TestimonialDelete/@item.Id" class="btn btn-danger-soft btn-sm"><i class="far fa-trash-alt"></i></a>
                        <a href="TestimonialEdit/@item.Id" class="btn btn-success-soft btn-sm ml-1"><i class="far fa-edit"></i></a>

                    </td>
                </tr>
                }
            </tbody>
        </table>
        <a href="TestimonialCreate"> <button type="button" class="btn btn-secondary"> Add Testimonial</button></a>
    </div>
</div>

<!--End Table-->
