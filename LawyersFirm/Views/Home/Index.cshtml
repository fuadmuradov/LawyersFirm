                                <ul class="lawyer-social">
                                    <li><a href="@Model.Attorneys[i].AttorneyContacts.FirstOrDefault(i=>i.AttorneyId==id).Twitter" target="_blank"><i class="fab fa-twitter"></i></a></li>
