<!-- HOME SLIDER -->
<div class="slider-container">
    <div class="owl-carousel owl-theme home-slider">

        @foreach (var item in Model.Slider.SliderImages)
        {
            <div class="slider-post slider-item-box">
                <img class="img-fluid" src="~/assets/images/home/@item.Image" alt="">
                <div class="slider-caption">
                    <div class="slider-text">
                        @if (Model.Slider.Title.Length > 16)
                        {
                            <h2>@Model.Slider.Title.Substring(0, 16)<br>@Model.Slider.Title.Substring(16)</h2>
                        }
                        else
                        {
                            <h2>@Model.Slider.Title</h2>
                        }


                        <h4>@item.Subject</h4>
                        <a class="btn-white" asp-controller="Practice" asp-action="AllPractices">Find More</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
