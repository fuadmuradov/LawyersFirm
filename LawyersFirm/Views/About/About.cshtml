        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 alignc">
                    <span class="heading-subtitle">Our Attorneys</span>
                    <h2 class="section-heading-title">Professional Team</h2>
                </div>
            </div>
            <!-- /row -->
            <div class="row">
                @for (int i = 0; i < 4; i++)
                {
                    int id = Model.Attorneys[i].Id;
                    <div class="col-lg-3 col-md-6">
                        <div class="lawyer-holder lawyer-3col">
                            <a asp-controller="Attorney" asp-action="Details" asp-route-id="@Model.Attorneys[i].Id"><img src="~/assets/images/team/@Model.Attorneys[i].Image" class="img-fluid" alt=""></a>
                            <div class="lawyer-position">@Model.Attorneys[i].Jobname</div>
                            <h2 class="lawyer-title"><a asp-controller="Attorney" asp-action="Details" asp-route-id="@Model.Attorneys[i].Id">@Model.Attorneys[i].Fullname</a></h2>
                            <div class="lawyer-excerpt">@(Model.Attorneys[i].Biography!=null && Model.Attorneys[i].Biography.Length>135 ? Model.Attorneys[i].Biography.Substring(0,135): Model.Attorneys[i].Biography )</div>
                            <ul class="lawyer-social">
                                <li><a href="@Model.Attorneys[i].AttorneyContacts.FirstOrDefault(i=>i.AttorneyId==id).Twitter" target="_blank"><i class="fab fa-twitter"></i></a></li>
                                <li><a href="@Model.Attorneys[i].AttorneyContacts.FirstOrDefault(i=>i.AttorneyId==id).Facebook" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="@Model.Attorneys[i].AttorneyContacts.FirstOrDefault(i=>i.AttorneyId==id).Linkedin" target="_blank"><i class="fab fa-linkedin-in"></i></a></li>
                            </ul>
                        </div>
                    </div>
                }


               
            </div>
